
@{
    ViewData["Title"] = "Home Page";
}

@model List<ProductModels>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-8">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <img src="~/images/@item.ProductImage" style="width:250px;height:250px" alt="">
                        </div>
                        <div class="card-body">
                            <h2 class="card-title"> @item.ProductName</h2>
                            <p class="card-text">@item.Descriptions</p>
                            <p class="card-text">@item.ProductPrice.ToString("C")</p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Detail" asp-action="Index" asp-route-id="@item.ProductId" asp-route-name="@item.ProductName" class="btn btn-primary">Details</a>
                            <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.ProductId" class="btn btn-info">Buy now</a>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
